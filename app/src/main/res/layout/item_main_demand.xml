<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="10dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_main_item"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:src="@mipmap/android_quanzi"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/iv_demand_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jywlxx_cha"
            android:layout_gravity="right"
            android:layout_margin="10dp" />
    </FrameLayout>
    <TextView
        android:id="@+id/tv_main_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="#333"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        tools:text="包邮荔枝干1000g,核小肉厚新鲜干荔枝包邮荔枝干1000g,核小肉厚新鲜干荔枝包邮荔枝干1000g,核小肉厚新鲜干荔枝"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_main_item_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="广东：深圳"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="需求量："
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tv_main_item_sale"
            android:textSize="12sp"
            android:textColor="#999"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_main_item_sale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="1000"
          android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textColor="#999"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

</LinearLayout>
