<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srl_store"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:fitsSystemWindows="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_jump_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="松手将返回首页"
                android:drawableTop="@mipmap/tohome"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="@color/main_color"
                android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@mipmap/sp_dpbj">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_shangpu"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/wd_mrtx"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"/>

            <ImageView
                android:id="@+id/iv_shangpu_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dpzy_dj5"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="粉小萌酸辣粉旗舰店"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
            <TextView
                android:id="@+id/tv_store_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="如果想找到比粉小萌更好吃的酸辣粉就只能自己做了, 而这就是我为你做的"
                android:lines="2"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f7f7f7"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:background="#fff">
            <LinearLayout
                android:id="@+id/ll_wait_deliver"
                style="@style/shangpu_linearlayout">
                <TextView
                    android:id="@+id/tv_wait_deliver_count"
                    android:text="0"
                    style="@style/shangpu_texview1"/>
                <TextView
                    android:text="待发货"
                    style="@style/shangpu_texview1"
                    android:textSize="13sp"
                    android:textColor="#999"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_has_deliver"
                style="@style/shangpu_linearlayout">
                <TextView
                    android:id="@+id/tv_has_deliver_count"
                    android:text="0"
                    style="@style/shangpu_texview1"/>
                <TextView
                    android:text="已发货"
                    style="@style/shangpu_texview1"
                    android:textSize="13sp"
                    android:textColor="#999"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_sold"
                style="@style/shangpu_linearlayout">
                <TextView
                    android:id="@+id/tv_sold_count"
                    android:text="0"
                    style="@style/shangpu_texview1"/>
                <TextView
                    android:text="已售出"
                    style="@style/shangpu_texview1"
                    android:textSize="13sp"
                    android:textColor="#999"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_refund"
                style="@style/shangpu_linearlayout">
                <TextView
                    android:id="@+id/tv_refund_count"
                    android:text="0"
                    style="@style/shangpu_texview1"/>
                <TextView
                    android:text="退货/退款"
                    style="@style/shangpu_texview1"
                    android:textSize="13sp"
                    android:textColor="#999"/>
            </LinearLayout>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f7f7f7"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="#333"
                android:text="店铺商品"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_all_products"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:textColor="#999"
                android:text="全部商品"
                android:gravity="center|right"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/dpsp_fhj"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                />
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_insale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sp_csz"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/iv_1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_onsale"
                        android:text="出售中"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="#333"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/tv_on_sacle_count"
                        android:text="0件商品"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textColor="#999"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f3f3f3"/>
            <RelativeLayout
                android:id="@+id/rl_warehouse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sp_ckz"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/iv_2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_rest"
                        android:text="仓库中"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="#333"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/tv_store_rest_count"
                        android:text="0件商品"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textColor="#999"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_publish_product"
                    android:text="发布商品"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@mipmap/sp_fbsp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#f3f3f3"/>
                <TextView
                    android:id="@+id/tv_postage_setting"
                    android:text="运费设置"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/sp_yfsz"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f7f7f7"
                android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/whitecircler_corner_shape3">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/sp_ddtj"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/iv_3">
                    <TextView
                        android:text="订单统计"
                        android:textSize="15sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        style="@style/shangpu_texview1" />
                    <TextView
                        android:id="@+id/tv_order_count"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#999"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        style="@style/shangpu_texview1" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sp_sr"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/iv_4"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:text="收入"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_incom"
                        android:text="¥0"
                        android:textColor="#999"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#e8e8e8"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sp_tk"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/iv_5"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/tv_refund"
                        android:text="退款"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="¥0"
                        android:textColor="#999"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView" />
                </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>
