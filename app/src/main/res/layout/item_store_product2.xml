<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#fff"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/iv_product_goods"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:src="@mipmap/android_quanzi"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_store_goods_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣"
                android:textSize="14sp"
                android:textColor="#333"
                android:lines="2"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:id="@+id/iv_store_goods_detial">

                <TextView
                    android:id="@+id/tv_store_goods_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="¥59.00"
                    android:gravity="center_vertical"
                    android:textColor="#333"
                    android:textSize="14sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dpsp_fhj"
                    android:layout_gravity="center_vertical|right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                >
                <TextView
                    android:id="@+id/tv_store_goods_sales"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="销量：1265"
                    android:textColor="#909090"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_store_goods_inventory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="库存:41321"
                    android:gravity="center|left"
                    android:textColor="#909090"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="删除"
            android:paddingTop="5dp"
            android:textColor="#909090"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/qbsp_sc"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_online"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上架"
            android:textColor="#909090"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:paddingTop="5dp"
            android:drawableTop="@mipmap/qbsp_sj"
            android:gravity="center"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f3f3f3"
        android:layout_marginTop="10dp"/>
    </LinearLayout>
