<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_apply_refund"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#f3f3f3"
    tools:context="com.dgkj.fxmall.view.ApplyRefundActivity">
    <include layout="@layout/activityheader"
        android:id="@+id/headerview"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="15sp"
        android:text="退款类型"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tv_refund_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#333"
        android:textSize="15sp"
        android:text="退货退款"
        android:gravity="center|left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:drawableRight="@mipmap/gwc_bj_xl"
        android:paddingRight="10dp"
        android:background="#fff"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="15sp"
        android:text="退款原因*"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_select_refund_reason"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#909090"
        android:textSize="15sp"
        android:text="退款原因"
        android:gravity="center|left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:background="#fff"
        android:drawableRight="@mipmap/gwc_bj_xl"
        android:paddingRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="15sp"
            android:text="退款金额*"
            android:layout_margin="10dp"/>
      <!--  <TextView
            android:id="@+id/tv_most_refund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#909090"
            android:textSize="15sp"
            android:text="最多59元"
            android:layout_margin="10dp"/>-->
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#909090"
        android:textSize="15sp"
        android:focusable="false"
        android:gravity="center|left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:background="#fff"
        android:id="@+id/et_refund_money" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="15sp"
            android:text="退款说明"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#909090"
            android:textSize="15sp"
            android:text="（可不填）"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/et_refund_describe"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="#909090"
        android:textSize="15sp"
        android:hint="请输入退款说明"
        android:gravity="top"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:background="#fff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/iv_refund_1"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/android_quanzi"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/iv_refund_2"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/android_quanzi"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/iv_refund_3"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/android_quanzi"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tv_select_pictures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上传3张凭证"
            android:drawableTop="@mipmap/dsh_scpz_pz"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:gravity="center"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circler_back_corner_shape"
            android:src="@mipmap/title_return_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="10dp"
            android:text="提交申请"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:background="@drawable/circlebutton_shape"/>
    </RelativeLayout>



</LinearLayout>
