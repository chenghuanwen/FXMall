<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_all_classify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <include layout="@layout/activityheader"
        android:id="@+id/headerview"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <ListView
            android:id="@+id/rv_all_classify"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:listSelector="@color/main_color"
            android:layout_marginTop="10dp"
            android:background="#f3f3f3"
            android:divider="#e8e8e8"></ListView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sub_classify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_margin="10dp"
            android:background="#fff"
            ></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dpsx_fh"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circlebutton_shape"
            android:text="чбошод"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"/>
    </LinearLayout>

</LinearLayout>
