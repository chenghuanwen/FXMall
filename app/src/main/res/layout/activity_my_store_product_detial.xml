<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_store_product_detial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.dgkj.fxmall.view.MyStoreProductDetialActivity">
    <include layout="@layout/activityheader"
        android:id="@+id/headerview"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">
                <AdapterViewFlipper
                    android:id="@+id/avf_products"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:flipInterval="1000"></AdapterViewFlipper>

            </FrameLayout>
            <EditText
                android:id="@+id/et_product_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="请填写商品描述性标题"
                android:textColorHint="#cfcfcf"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:background="@drawable/whitecircler_corner_shape3"
                android:layout_margin="10dp" />
            <EditText
                android:id="@+id/et_product_destribe"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="请填写商品描述信息"
                android:textColorHint="#909090"
                android:textSize="14sp"
                android:background="@drawable/whitecircler_corner_shape3"
                android:paddingLeft="10dp"
                android:layout_margin="10dp"
                android:gravity="top"
                android:paddingTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/whitecircler_corner_shape3"
                android:layout_margin="10dp">
                <LinearLayout
                    style="@style/add_product_linearlayout">
                    <TextView
                        android:text="型号："
                        style="@style/add_product_textview"
                        />
                    <EditText
                        android:id="@+id/et_product_type"
                        android:hint="请填写商品型号（如：颜色红-M码）"
                        style="@style/add_product_edittext"
                        />
                </LinearLayout>
                <View
                    style="@style/add_product_view"/>
                <LinearLayout
                    style="@style/add_product_linearlayout">
                    <TextView
                        android:text="价格："
                        style="@style/add_product_textview"
                        />
                    <EditText
                        android:id="@+id/et_product_price"
                        android:hint="请填写商品价格"
                        style="@style/add_product_edittext"
                        />
                </LinearLayout>
                <View
                    style="@style/add_product_view"/>
                <LinearLayout
                    style="@style/add_product_linearlayout">
                    <TextView
                        android:text="库存："
                        style="@style/add_product_textview"
                        />
                    <EditText
                        android:id="@+id/et_product_save_count"
                        android:hint="请填写商品库存量"
                        style="@style/add_product_edittext"
                        />
                </LinearLayout>
                <View
                    style="@style/add_product_view"/>
                <LinearLayout
                    style="@style/add_product_linearlayout">
                    <TextView
                        android:text="佣金："
                        style="@style/add_product_textview"
                        />
                    <EditText
                        android:id="@+id/et_demand_count"
                        android:hint="请填写商品佣金"
                        style="@style/add_product_edittext"
                        />
                </LinearLayout>
                <View
                    style="@style/add_product_view"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_add_type_container"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_add_type"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="添加商品型号"
                    android:textColor="@color/main_color"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:drawableLeft="@mipmap/tjsp_jh_lan"
                    android:drawablePadding="10dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_product_detial"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/whitecircler_corner_shape3"
                android:layout_margin="10dp"
                android:textColor="#333"
                android:textSize="14sp"
                android:drawableRight="@mipmap/dpsp_fhj"
                android:layout_marginRight="10dp"
                android:text="商品详情"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_product_classify"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/whitecircler_corner_shape3"
                android:layout_margin="10dp"
                android:textColor="#333"
                android:textSize="14sp"
                android:drawableRight="@mipmap/dpsp_fhj"
                android:layout_marginRight="10dp"
                android:text="分类"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="是否支持线上发货"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333"
                    android:layout_centerVertical="true"/>
                <CheckBox
                    android:id="@+id/cb_deliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/deliver_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_postage_model"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/whitecircler_corner_shape3"
                android:layout_margin="10dp"
                android:textColor="#333"
                android:textSize="14sp"
                android:drawableRight="@mipmap/dpsp_fhj"
                android:layout_marginRight="10dp"
                android:text="默认运费模板"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:visibility="gone"/>
            <ListView
                android:id="@+id/rv_postage_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginLeft="10dp"
                android:visibility="gone"></ListView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="#fff">
                <ImageButton
                    android:id="@+id/ib_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circler_back_corner_shape"
                    android:src="@mipmap/title_return_icon"
                    android:layout_marginLeft="10dp"/>
                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:text="删除"
                    android:textColor="#333"
                    android:background="@mipmap/ddxq_qxdd"
                    android:layout_marginLeft="10dp"/>
                <Button
                    android:id="@+id/btn_on_off"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:text="上架"
                    android:textColor="#fff"
                    android:background="@drawable/circlebutton_shape"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
