<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f7f7f7">
   <!-- <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#333"
        android:layout_marginTop="20dp"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:id="@+id/tv_share_QQ"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/fx_qqhy"
            android:text="QQ"
            android:textColor="#333"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_share_qzone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/fx_qqkj"
            android:text="QQ空间"
            android:textColor="#333"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tv_share_weixin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/fx_wxhy"
            android:text="微信"
            android:textColor="#333"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <TextView
            android:id="@+id/tv_share_friends"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/fx_wxpyq"
            android:text="朋友圈"
            android:textColor="#333"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tv_share_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/fx_xlwb"
            android:text="微博"
            android:textColor="#333"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginRight="10dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#fff"
        android:textColor="#333"
        android:textSize="15sp"
        android:text="取消"/>

</LinearLayout>
