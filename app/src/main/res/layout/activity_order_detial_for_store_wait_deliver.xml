        android:textSize="15sp"
        android:background="@mipmap/ddxq_mjfkbj"
        android:drawableLeft="@mipmap/ddxq_dd"
        android:paddingLeft="25dp"
        android:drawablePadding="10dp"
        android:paddingRight="20dp"
        android:drawableRight="@mipmap/ddxq_fh"
        android:gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">
                <ImageView
                    android:id="@+id/iv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ddxq_dw"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:layout_toRightOf="@+id/iv_address">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_order_take_man"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="收货人：粉小萌"
                            android:textSize="14sp"
                            android:textColor="#333"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/tv_order_take_phone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="5654654"
                            android:layout_marginTop="10dp"
                            android:gravity="center|left"
                            android:textSize="15sp"
                            android:textColor="#333"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_order_take_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#666"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="收货地址：广东省深圳市龙岗区布吉街道官坑北六巷八号一楼"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whitecircler_corner_shape3"
        android:orientation="vertical"
        android:layout_margin="10dp">
     <TextView
         android:id="@+id/tv_order_store_name"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:text="粉小萌酸辣粉"
         android:textColor="#333"
         android:layout_marginLeft="10dp"
         android:gravity="center_vertical"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f3f3f3"/>
        <LinearLayout
            android:id="@+id/ll_order_detial_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
