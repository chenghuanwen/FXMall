        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f3f3f3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="实收款："
                android:textSize="14sp"
                android:textColor="#333"/>
            <TextView
                android:id="@+id/tv_order_getMoney"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="¥5654654"
                android:gravity="center|right"
                android:textSize="14sp"
                android:textColor="#333"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="买家留言："
            android:textColor="#333"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_buyers_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="粉小萌味道绝对正宗，而且颜值很高，吃货的福利来啦，你还在等什么"
            android:textColor="#f00"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="配送方式："
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_order_express"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="顺丰快递"
            android:gravity="center|right"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/dpsx_fh"
                android:layout_marginLeft="10dp"
                />
        </FrameLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_deliver"
            android:layout_width="150dp"
            android:background="@drawable/circlebutton_shape"
            android:layout_height="match_parent"
            android:text="发货"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

</LinearLayout>
