<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <CheckBox
            android:id="@+id/cb_batch_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_selector"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_store_goods_batch"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:src="@mipmap/android_quanzi"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_store_goods_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣"
                android:textSize="14sp"
                android:lines="2"
                android:textColor="#333"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_store_goods_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="¥59.00"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:gravity="center|left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                >
                <TextView
                    android:id="@+id/tv_store_goods_sales"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="销量：1265"
                    android:textColor="#909090"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_store_goods_inventory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="库存:41321"
                    android:gravity="center|left"
                    android:textColor="#909090"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f3f3f3"
        android:layout_marginTop="10dp"/>
    </LinearLayout>
