<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="163dp"
    android:layout_height="340dp"
    android:layout_marginRight="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_main_item"
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:src="@mipmap/android_quanzi"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tv_main_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#333"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            tools:text="包邮荔枝干1000g,核小肉厚新鲜干荔枝包邮荔枝干1000g,核小肉厚新鲜干荔枝包邮荔枝干1000g,核小肉厚新鲜干荔枝"/>
        <TextView
            android:id="@+id/tv_main_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="深圳市"
            android:textSize="12sp"
            android:textColor="#909090"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_main_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="¥35"
            android:textSize="15sp"
            android:textColor="#2b2b2b"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/tv_main_item_vipPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="¥35"
                android:textColor="#909090"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:textSize="12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="销量:"
                android:layout_marginLeft="10dp"
                android:gravity="center|right"
                android:textSize="11sp"
                android:textColor="#909090"
                android:layout_toLeftOf="@+id/tv_main_item_sale"
                />
            <TextView
                android:id="@+id/tv_main_item_sale"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="1000"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_loadmore"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:textColor="#909090"
        android:text="加载更多..."
        android:gravity="center"
        android:background="#f3f3f3"
        android:layout_marginTop="20dp"/>

</LinearLayout>
