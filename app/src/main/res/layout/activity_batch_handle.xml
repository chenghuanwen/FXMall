<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_batch_handle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.dgkj.fxmall.view.BatchHandleActivity">
    <include layout="@layout/activityheader"
        android:id="@+id/headerview"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_batch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:background="#fff">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/dpsx_fh"
            android:padding="10dp"
            android:layout_marginRight="10dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e8e8e8"/>
        <CheckBox
            android:id="@+id/cb_check_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="全选"
            android:layout_gravity="center"
            android:button="@drawable/checkbox_selector"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e8e8e8"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:id="@+id/ll_from_rest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">
                <TextView
                    android:id="@+id/tv_product_online"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp"
                    android:text="上架"
                    android:layout_margin="10dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#e8e8e8"/>
                <TextView
                    android:id="@+id/tv_product_delete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp"
                    android:text="删除"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_product_offline"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp"
                android:text="下架"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
