<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_detial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#f7f7f7f7"
    tools:context="com.dgkj.fxmall.view.OrderDetialActivity">
    <include layout="@layout/activityheader"
        android:id="@+id/headerview"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@mipmap/ddxq_mjfkbj">
                <ImageView
                    android:id="@+id/iv_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ddxq_dd"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"/>

                <TextView
                    android:id="@+id/tv_order_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="等待买家付款"
                    android:textColor="#ff8194"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/iv_clock"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/tv_order_pay_coutdown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="剩2天23小时自动关闭"
                    android:textColor="#ff8194"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_clock"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_order_state"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ddxq_fk"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f7f7f7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_order_take_man"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收货人：粉小萌"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_order_take_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5654654"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:textSize="15sp"
                android:textColor="#333"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_order_take_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666"
            android:drawableLeft="@mipmap/ddxq_dw"
            android:drawablePadding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="收货地址：广东省深圳市龙岗区布吉街道官坑北六巷八号一楼"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whitecircler_corner_shape3"
        android:orientation="vertical"
        android:layout_margin="10dp">
     <TextView
         android:id="@+id/tv_order_store_name"
         android:layout_width="match_parent"
         android:layout_height="44dp"
         android:text="粉小萌酸辣粉"
         android:textColor="#333"
         android:textSize="14sp"
         android:layout_marginLeft="10dp"
         android:gravity="center_vertical"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8"/>
        <LinearLayout
            android:id="@+id/ll_order_detial_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
