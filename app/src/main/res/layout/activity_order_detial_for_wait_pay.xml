        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f3f3f3"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="店铺合计："
                android:textSize="14sp"
                android:textColor="#333"/>
            <TextView
                android:id="@+id/tv_order_getMoney"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="¥5654654"
                android:gravity="center|right"
                android:textSize="14sp"
                android:textColor="#333"/>
        </LinearLayout>
    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/whitecircler_corner_shape3"
                android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="配送方式："
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_order_express"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="顺丰快递"
            android:gravity="center|right"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f7f7f7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">
                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单编号：6456546468666"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:layout_margin="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e8e8e8"/>
                <TextView
                    android:id="@+id/tv_order_create_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="创建时间：2017-04-01 13:38:01"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:layout_margin="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e8e8e8"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#f7f7f7"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8e8"/>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/dpsx_fh"
                android:layout_marginLeft="10dp"
                />
        </FrameLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_chagne_address"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textColor="#333"
            android:textSize="15sp"
            android:gravity="center"
            android:text="修改地址"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@mipmap/ddxq_qxdd"/>
        <TextView
            android:id="@+id/tv_cancle_order"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textColor="#333"
            android:textSize="15sp"
            android:text="取消订单"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@mipmap/ddxq_qxdd"/>
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="70dp"
            android:background="@drawable/circlebutton_shape"
            android:layout_height="30dp"
            android:text="付款"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</LinearLayout>
