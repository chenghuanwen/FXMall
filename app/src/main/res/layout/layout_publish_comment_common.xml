<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lxhRatingBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/whitecircler_corner_shape3"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/tv_comment_storename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="粉小萌旗舰店"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#333"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#fff"
            android:layout_margin="10dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/iv_car_goods"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:src="@mipmap/android_quanzi"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_car_goods_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣"
                    android:textSize="15sp"
                    android:lines="2"
                    android:textColor="#333"
                    android:ellipsize="end"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:id="@+id/tv_car_goods_color"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="颜色：黑色"
                        android:gravity="center_vertical"
                        android:textColor="#909090"
                        android:textSize="14sp"/>
                    <!--    <TextView
                            android:id="@+id/tv_car_goods_size"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:text="尺码：均码"
                            android:gravity="center_vertical"
                            android:textColor="#909090"
                            android:textSize="14sp"/>-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tv_car_goods_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="¥35"
                        android:textColor="#333"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_car_goods_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="x1"
                        android:layout_marginTop="10dp"
                        android:gravity="center|right"
                        android:textColor="#333"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f3f3f3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#333"
                android:textSize="15sp"
                android:text="描述相符:"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>
            <com.dgkj.fxmall.view.myView.XLHRatingBar
                android:id="@+id/rb_decribe_star"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                lxhRatingBar:canEdit="true"
                android:gravity="center_vertical"
                lxhRatingBar:differentSize="false"
                lxhRatingBar:dividerWidth="5dp"
                lxhRatingBar:starCount="5"
                android:layout_marginLeft="20dp"
                lxhRatingBar:stateResId="@drawable/comment_ratingbar_selector"
                lxhRatingBar:widthAndHeight="30dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f3f3f3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#333"
            android:textSize="15sp"
            android:text="价格合理:"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>

        <com.dgkj.fxmall.view.myView.XLHRatingBar
            android:id="@+id/rb_price_star"
            xmlns:lxhRatingBar="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            lxhRatingBar:canEdit="true"
            lxhRatingBar:differentSize="false"
            lxhRatingBar:dividerWidth="5dp"
            lxhRatingBar:starCount="5"
            lxhRatingBar:stateResId="@drawable/comment_ratingbar_selector"
            lxhRatingBar:widthAndHeight="30dp" />
            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f3f3f3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#333"
            android:textSize="15sp"
            android:text="质量满意:"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>

        <com.dgkj.fxmall.view.myView.XLHRatingBar
            android:id="@+id/rb_quality_star"
            xmlns:lxhRatingBar="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            lxhRatingBar:canEdit="true"
            lxhRatingBar:differentSize="false"
            lxhRatingBar:dividerWidth="5dp"
            lxhRatingBar:starCount="5"
            lxhRatingBar:stateResId="@drawable/comment_ratingbar_selector"
            lxhRatingBar:widthAndHeight="30dp" />
            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f3f3f3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#333"
            android:textSize="15sp"
            android:text="评价描述:"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/et_comment_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:gravity="top"
            android:padding="10dp"
            android:background="@mipmap/ddxq_qxdd"/>
    </LinearLayout>
</LinearLayout>
