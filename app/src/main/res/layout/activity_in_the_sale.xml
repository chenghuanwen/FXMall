<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_in_the_sale"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f3f3"
    android:fitsSystemWindows="true"
    tools:context="com.dgkj.fxmall.view.InTheSaleActivity">
    <include layout="@layout/activityheader"
        android:id="@+id/headerview"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff">
        <RadioGroup
            android:id="@+id/rg_product"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_onSale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="出售中"
                android:layout_marginLeft="20dp"
                android:gravity="center|left"
                android:textSize="14sp"
                android:textColor="@drawable/sale_textcolor_selector"
                android:checked="true" />
            <RadioButton
                android:id="@+id/rb_rest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="仓库中"
                android:gravity="center|right"
                android:layout_marginRight="20dp"
                android:textSize="14sp"
                android:textColor="@drawable/sale_textcolor_selector" />
        </RadioGroup>
    </FrameLayout>
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <View
            android:id="@+id/underline1"
            android:layout_width="79dp"
            android:layout_height="2dp"
            android:background="@color/main_color"
            android:layout_gravity="bottom"/>
        <View
            android:id="@+id/underline2"
            android:layout_width="79dp"
            android:layout_height="2dp"
            android:background="@color/main_color"
            android:layout_gravity="bottom|right"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        style="@style/insale_linearlayout"
        android:id="@+id/ll_store_all"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="全部商品"
            style="@style/insale_texview1"
            />
        <TextView
            android:id="@+id/tv_count_all"
            android:text="（共100件商品）"
            style="@style/insale_texview2"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_store_product_classify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"></LinearLayout>
