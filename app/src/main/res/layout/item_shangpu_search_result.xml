<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/civ_shangpu_item">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_shangpu_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/android_quanzi"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            tools:text="粉小萌酸辣粉专卖店"
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/civ_shangpu_item"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_store_address"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            tools:text="广东深圳"
            android:textColor="#909090"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_store_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/tv_delete_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="#909090"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
       <ImageView
           android:id="@+id/rb_commend"
           android:layout_width="100dp"
           android:layout_height="15dp"
           android:layout_marginBottom="10dp"
           android:layout_alignParentBottom="true"
           android:src="@mipmap/dppj_dj5"
           android:layout_toRightOf="@+id/civ_shangpu_item"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_total_sales"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                tools:text="126545"
                android:textColor="#333"
                android:textSize="15sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="总销量"
                android:textColor="#909090"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#e8e8e8"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_total_goods"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                tools:text="126545"
                android:textColor="#333"
                android:textSize="15sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="宝贝数"
                android:textColor="#909090"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#e8e8e8"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_describe"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="描述相符   5.00"
                android:textColor="#909090"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingLeft="5dp"/>
            <TextView
                android:id="@+id/tv_price_reasonable"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="价格合理  4.5"
                android:textColor="#909090"
                android:textSize="12sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_quality_ok"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="价格合理  4.5"
                android:textColor="#909090"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_enter_store"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:text="进店看看"
        android:textSize="15sp"
        android:textColor="#fff"
        android:gravity="center"
        android:background="@drawable/circlebutton_shape"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
