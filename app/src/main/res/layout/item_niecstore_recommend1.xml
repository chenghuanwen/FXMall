<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="135dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/circler_corner_shape5"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:layout_width="96dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/android_quanzi"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/tv_nicestore_name"
                android:lines="1"
                android:textSize="12sp"
                tools:text="官方旗舰店"
                android:gravity="center_vertical"
                android:textColor="#f6f6f6"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="15dp"
            android:layout_height="1dp"
            android:background="#f6f6f6"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_nicestore_introduce"
            android:textSize="12sp"
            tools:text="中国风也优雅 玩转中国风"
            android:gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="3"
            android:textColor="#f6f6f6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_nicestore_address"
            android:textSize="12sp"
            tools:text="官方旗舰店"
            android:gravity="center"
            android:textColor="#f6f6f6"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_nicestore"
        android:layout_width="184dp"
        android:layout_height="match_parent"
        android:src="@mipmap/android_quanzi"
        android:scaleType="fitXY"/>

</LinearLayout>
