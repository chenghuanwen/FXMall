<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.dgkj.fxmall.view.SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
           >
            <TextView
                android:id="@+id/tv_search_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="商品"
                android:textSize="14sp"
                android:textColor="#fff"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/dpsx_xl_bs"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#fff"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/et_search_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:hint="功夫茶茶具"
                android:layout_gravity="center"
                android:background="@drawable/gray_corner_shape"
                android:inputType="text"
                android:textColor="#cfcfcf"
                android:textSize="11sp"
                android:paddingLeft="10dp"
                android:imeOptions="actionSearch"
                android:lines="1"/>
          <!--  <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sc_wgx"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                />-->

        </LinearLayout>
        <TextView
            android:id="@+id/tv_cancle_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取消"
            android:background="@color/main_color"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="15sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门搜索"
            android:textSize="13sp"
            android:textColor="#999"
            android:paddingTop="20dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_change_batch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换一换"
            android:textColor="#999"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#f3f3f3"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_hot_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>
    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circler_back_corner_shape"
        android:src="@mipmap/title_return_icon"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"/>

</LinearLayout>
