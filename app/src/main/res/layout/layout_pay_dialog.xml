<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_cancle_pay"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="付款详情"
        android:textColor="#333"
        android:textSize="17sp"
        android:gravity="center"
        android:drawableLeft="@mipmap/cz_guanbi"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="需付款"
            android:textColor="#333"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_need_pay"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="59.00元"
            android:textColor="#333"
            android:textSize="14sp"
            android:gravity="center|right"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rg_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"/>
    <RadioButton
        android:id="@+id/tv_zhifubao_pay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="支付宝支付"
        android:textColor="#333"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:button="@null"
        android:drawableLeft="@mipmap/zhifubao"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/checkbox_selector"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"/>
    <RadioButton
        android:id="@+id/tv_weixi_pay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="微信支付"
        android:textColor="#333"
        android:textSize="14sp"
        android:button="@null"
        android:drawableLeft="@mipmap/weixin"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/checkbox_selector"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"/>
    <RadioButton
        android:id="@+id/tv_balance_pay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="余额支付"
        android:textColor="#333"
        android:textSize="14sp"
        android:button="@null"
        android:drawableLeft="@mipmap/yezf"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/checkbox_selector"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"/>
    </RadioGroup>

</LinearLayout>
