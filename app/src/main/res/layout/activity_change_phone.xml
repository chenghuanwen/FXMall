<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.dgkj.fxmall.view.ChangePhoneActivity"
    android:background="#f7f7f7">
    <include layout="@layout/activityheader"
        android:id="@+id/headerview"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="为了您的账户安全\n请验证现用手机号"
        android:textSize="13sp"
        android:textColor="#666"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_bind_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已绑定手机号：138183465465"
        android:textSize="13sp"
        android:textColor="#333"
        android:gravity="center"
        android:layout_margin="20dp"/>
    <EditText
        android:id="@+id/et_check_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入短信验证码"
        android:gravity="center"
        android:textColorHint="#cfcfcf"
        android:textColor="#909090"
        android:textSize="25sp"
        android:background="@drawable/whitecircler_corner_shape3"
        android:inputType="number"
        android:layout_margin="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f3f3f3"/>
    <TextView
        android:id="@+id/tv_get_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:textSize="14sp"
        android:textColor="@color/main_color"
        android:gravity="center"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/tv_change_by_paypass"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="通过支付密码修改"
        android:gravity="center"
        android:textColor="#666"
        android:textSize="15sp"
        android:drawableRight="@mipmap/dpsp_fhj"
        android:paddingRight="10dp"
        android:background="@drawable/whitecircler_corner_shape3"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tv_no_paypass"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="还未设置支付密码？"
        android:textColor="@color/main_color"
        android:textSize="15sp"
        android:paddingRight="10dp"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:textSize="14sp"
        android:text="确认"
        android:layout_gravity="center"
        android:background="@drawable/circlebutton_shape"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circler_back_corner_shape"
        android:src="@mipmap/title_return_icon"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"/>

</LinearLayout>
