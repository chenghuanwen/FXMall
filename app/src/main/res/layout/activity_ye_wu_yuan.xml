<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/srl_refresh"
    android:fitsSystemWindows="true"
    android:background="#f7f7f7">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_jump_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="松手将返回首页"
                android:drawableTop="@mipmap/tohome"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="@color/main_color"
                android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/sp_dpbj">
        <TextView
            android:id="@+id/tv_my_vip_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="30sp"
            android:text="0"
            android:layout_marginTop="30dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:text="我的会员（人）"
            android:textColor="#fff"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#56abfe"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_margin="30dp"
            android:layout_gravity="center_horizontal"
            android:text="发送邀请"
            android:background="@drawable/circler_corner_shape12"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_today_commission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textColor="#ff4a4e"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="今日佣金（元）"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="#333"
                android:gravity="center"
                />

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#e8e8e8"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textColor="#ff4a4e"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_month_commission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="当月佣金（元）"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="#333"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/tv_recharge"
            style="@style/shangpu_linearlayout"
            android:background="#fff">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ywy_wycz"/>
            <TextView
                android:text="享受业务员的佣金项目，\n请将余额升至200元"
                style="@style/shangpu_texview1"
                android:textColor="#909090"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tv_withDrawal"
            style="@style/shangpu_linearlayout"
            android:background="#fff"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ywy_wytx"/>
            <TextView
                android:text="账户余额低于200元将无法享受业务员的佣金收入项目"
                android:textColor="#909090"
                android:textSize="12sp"
                style="@style/shangpu_texview1"/>
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
