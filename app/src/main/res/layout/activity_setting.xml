<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#f3f3f3"
    tools:context="com.dgkj.fxmall.view.SettingActivity">

    <include layout="@layout/activityheader"
        android:id="@+id/headerview"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff"
        android:id="@+id/tv_user_msg">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_set"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/sz_tx"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉小萌"
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/civ_set"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请码：52321313"
            android:textColor="#666"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/civ_set"
            android:layout_below="@+id/tv_username" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dpsp_fhj"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_change_password"
        android:text="账户安全"
        style="@style/setting_textview" />
    <TextView
        android:id="@+id/tv_about_us"
        android:text="关于我们"
        style="@style/setting_textview" />
    <TextView
    android:id="@+id/tv_advice_feedback"
    android:text="意见反馈"
    style="@style/setting_textview" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_check_update"
            android:text="检测更新"
            style="@style/setting_textview" />
        <Button
            android:id="@+id/tv_newst_version"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/gray_corner_shape"
            android:textColor="#fff"
            android:textSize="14sp"
            android:text="已是最新版本"
            android:layout_gravity="center"
            android:visibility="invisible"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ll_clean_cache"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="清除缓存"
                android:textColor="#333"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="125M"
                android:layout_alignParentRight="true"
                android:textColor="#333"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/tv_clean_finish"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/gray_corner_shape"
            android:text="正在清理"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="invisible"/>
    </FrameLayout>
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:textSize="14sp"
        android:text="退出登录"
        android:background="@drawable/circlebutton_shape"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circler_back_corner_shape"
        android:src="@mipmap/title_return_icon"
        android:layout_margin="10dp"/>


</LinearLayout>
