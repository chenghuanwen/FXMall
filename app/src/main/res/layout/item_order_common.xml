<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_order_storename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="粉小萌酸辣粉"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#333"
            />
        <TextView
            android:id="@+id/tv_order_isDeliver"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="(商品已发出)"
            android:layout_toRightOf="@+id/tv_order_storename"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:textColor="#fe6262"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_order_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="等待买家付款"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#fe6262"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/order_comment_real"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:clickable="true">
        <ImageView
            android:id="@+id/iv_car_goods"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/android_quanzi"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:background="@drawable/circler_main_corner_shape"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_car_goods_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣裙连衣"
                android:textSize="14sp"
                android:lines="2"
                android:textColor="#333"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                >
                <TextView
                    android:id="@+id/tv_car_goods_color"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="颜色：黑色-M码"
                    android:textColor="#909090"
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_car_goods_size"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:text="尺码：均码"
                    android:gravity="center_vertical"
                    android:textColor="#909090"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                >
                <TextView
                    android:id="@+id/tv_car_goods_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="¥35"
                    android:gravity="bottom"
                    android:textColor="#333"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_car_goods_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="x1"
                    android:layout_marginRight="10dp"
                    android:gravity="bottom|right"
                    android:textColor="#333"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/tv_money_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="合计："
            android:gravity="center"
            android:textColor="#333"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_sumPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/main_color"
            tools:text="¥59.00"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_postage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="（包含邮费¥24.00）"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_order_sub_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>
