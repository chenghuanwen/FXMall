<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_transaction_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#fff"
    tools:context="com.dgkj.fxmall.view.TransactionRecordActivity">
    <include layout="@layout/activityheader"
        android:id="@+id/headerview"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#fff">
                <RadioGroup
                    android:id="@+id/rg_product"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/cb_transaction"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="交易流水"
                        android:layout_marginLeft="20dp"
                        android:gravity="center|left"
                        android:textSize="14sp"
                        android:textColor="@drawable/sale_textcolor_selector"
                        android:checked="true" />
                    <RadioButton
                        android:id="@+id/cb_transfer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="转账记录"
                        android:gravity="center|right"
                        android:layout_marginRight="20dp"
                        android:textSize="14sp"
                        android:textColor="@drawable/sale_textcolor_selector" />
                </RadioGroup>
            </FrameLayout>
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <View
                    android:id="@+id/underline1"
                    android:layout_width="79dp"
                    android:layout_height="2dp"
                    android:background="@color/main_color"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:id="@+id/underline2"
                    android:layout_width="79dp"
                    android:layout_height="2dp"
                    android:background="@color/main_color"
                    android:layout_gravity="bottom|right"
                    android:visibility="gone"
                    android:layout_marginRight="10dp"/>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f7f7f7"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_transaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circler_back_corner_shape"
            android:src="@mipmap/title_return_icon"
            android:layout_margin="10dp"
            android:layout_gravity="bottom"/>
    </FrameLayout>
</LinearLayout>
