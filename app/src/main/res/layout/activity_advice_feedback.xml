<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_advice_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#f3f3f3"
    tools:context="com.dgkj.fxmall.view.AdviceFeedbackActivity">
    <include layout="@layout/activityheader"
        android:id="@+id/headerview"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="问题类型"
                android:textSize="14sp"
                android:textColor="#909090"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/whitecircler_corner_shape3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="#fff">
                <TextView
                    android:id="@+id/tv_feedback_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="功能异常"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="不能正确使用现有功能"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#909090"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />
                <CheckBox
                    android:id="@+id/cb_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e8e8e8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="1dp">
                <TextView
                    android:id="@+id/tv_feedback_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="使用建议"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="用的不满意的地方都提出来吧"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#909090"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />
                <CheckBox
                    android:id="@+id/cb_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e8e8e8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="1dp">
                <TextView
                    android:id="@+id/tv_feedback_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="功能需求"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="现有功能不能满足需求"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#909090"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />
                <CheckBox
                    android:id="@+id/cb_type3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e8e8e8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="1dp">
                <TextView
                    android:id="@+id/tv_feedback_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="意外退出"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="app意外退出，闪退"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#909090"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />
                <CheckBox
                    android:id="@+id/cb_type4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e8e8e8"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="详情描述"
                android:textSize="14sp"
                android:textColor="#909090"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whitecircler_corner_shape3"
                android:orientation="vertical"
                android:layout_margin="10dp">
            <EditText
                android:id="@+id/et_advice"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#fff"
                android:hint="如果您对我们有什么建议、想法和期望，请告诉我们"
                android:gravity="top"
                android:padding="10dp"
                android:textColorHint="#cfcfcf"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e8e8e8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:text="手机号"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#ccc"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"/>
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:hint="方便我们更快向您反馈哦"
                    android:textColorHint="#efefef"
                    android:paddingLeft="10dp"
                    android:inputType="number"/>
            </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/circlebutton_shape"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="提交"
                android:textColor="#fff"
                android:textSize="14sp"
                android:layout_marginTop="36dp"/>

        </LinearLayout>

        </FrameLayout>
    </ScrollView>
    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circler_back_corner_shape"
        android:src="@mipmap/title_return_icon"
        android:layout_margin="10dp"/>
</LinearLayout>
