<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#fff"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff">
        <RadioGroup
            android:id="@+id/rg_product"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_join_store"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="加入商铺"
                android:layout_marginLeft="20dp"
                android:gravity="center|left"
                android:textSize="14sp"
                android:textColor="@drawable/join_textcolor_selector"
                android:checked="true" />
            <RadioButton
                android:id="@+id/rb_join_yewuyuan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="加入会员"
                android:gravity="center|right"
                android:layout_marginRight="20dp"
                android:textSize="14sp"
                android:textColor="@drawable/join_textcolor_selector" />
        </RadioGroup>
    </FrameLayout>
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <View
            android:id="@+id/underline1"
            android:layout_width="79dp"
            android:layout_height="1dp"
            android:background="#ff4a42"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"/>
        <View
            android:id="@+id/underline2"
            android:layout_width="79dp"
            android:layout_height="1dp"
            android:background="#ff4a42"
            android:layout_gravity="bottom|right"
            android:visibility="gone"
            android:layout_marginRight="10dp"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="14sp"
        android:text="你还在烦恼店铺客户的流失？"
        android:gravity="center"
        android:padding="20dp"
        android:background="#fff"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/gray_corner_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="14sp"
        android:text="你还在平台的选择上摇摆不定？"
        android:gravity="center"
        android:padding="20dp"
        android:background="#fff"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/gray_corner_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="14sp"
        android:text="你还在思考是否需要高额费用去开网店？"
        android:gravity="center"
        android:padding="20dp"
        android:background="#fff"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/gray_corner_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
